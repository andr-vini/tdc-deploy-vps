# Exemplo de arquivo de ambiente
# Copie para .env e configure com seus valores

# Configurações do VPS
VPS_HOST=192.168.1.100
VPS_USER=ubuntu
VPS_SSH_KEY=-----BEGIN OPENSSH PRIVATE KEY-----
# Cole aqui o conteúdo da sua chave privada SSH
# Exemplo: b3BlbnNzaC1rZXktdjEAAAAABG5vbmUAAAAEbm9uZQAAAAAAAAABAAAAlwAAAAdzc2gtcn
# -----END OPENSSH PRIVATE KEY-----

# Configurações da aplicação
APP_ENV=production
APP_DEBUG=false

# Banco de dados (se usar)
DB_HOST=localhost
DB_NAME=app_db
DB_USER=app_user
DB_PASS=app_password

# Configurações do container
CONTAINER_NAME=php-app-container
IMAGE_NAME=seu_usuario_dockerhub/tdc-php-app
VPS_PORT=80

# Docker Hub (para deploy manual)
DOCKERHUB_USERNAME=seu_usuario_dockerhub
DOCKERHUB_TOKEN=seu_token_dockerhub 